import os ;
local HOME = [ os.environ HOME ] ;

use-project /libea : ../ealib/libea ;

exe evomodel-normal :
    src/normal.cpp
    /libea//libea
    /libea//libea_runner
    : <include>./include <link>static
    ;

exe evomodel-joint :
    src/joint.cpp
    /libea//libea
    /libea//libea_runner
    : <include>./include <link>static
    ;

install dist : evomodel-normal evomodel-joint : <location>$(HOME)/bin ;
